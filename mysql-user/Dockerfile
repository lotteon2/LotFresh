FROM mysql:latest

# 환경 변수 설정
ARG MYSQL_ROOT_PASSWORD
ARG MYSQL_DATABASE1
ARG MYSQL_DATABASE2
ARG MYSQL_DATABASE3
ARG MYSQL_USER
ARG MYSQL_PASSWORD

ENV MYSQL_ROOT_PASSWORD=$MYSQL_ROOT_PASSWORD \
    MYSQL_DATABASE=$MYSQL_DATABASE1 \
    MYSQL_USER=$MYSQL_USER \
    MYSQL_PASSWORD=$MYSQL_PASSWORD

# 초기 스크립트 추가
ADD setup.sql /docker-entrypoint-initdb.d/
